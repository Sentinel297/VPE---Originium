<!-- Hediffs for Overload -->

<HediffDef>
	<defName>VPE_OriginiumArtsUnitSNTL</defName>
	<label>Arts Unit</label>
	<description>A modified psylink used as a medium for Originium Arts, this unit is flawed and will eventually become a regular psylink once again.\nThis Arts Unit allows the user to access Originium Arts virtually identical to their psycasts, negating the need for psyfocus.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<initialSeverity>1</initialSeverity>
	<minSeverity>0</minSeverity>
	<maxSeverity>1</maxSeverity>
	<defaultLabelColor>(1, 0.5, 0.0)</defaultLabelColor>
	<makesSickThought>False</makesSickThought>
	<scenarioCanAdd>false</scenarioCanAdd>
	<isBad>false</isBad>
	<everCurableByItem>false</everCurableByItem>
	<keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
	<comps>
		<li Class="VPE_Originium.HediffCompProperties_DisappearsAndGivesHediff">
			<hediffToAddOnDisappear>VPE_PsychicBlackoutSNTL</hediffToAddOnDisappear>
			<disappearsAfterTicks>5000</disappearsAfterTicks>
			<showRemainingTime>True</showRemainingTime>
		</li>
		<li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
	<stages>
		<li>
			<statFactors>
				<VPE_PsyfocusCostFactor>0</VPE_PsyfocusCostFactor>
			</statFactors>
		</li>
	</stages>
	<renderNodeProperties>
		<li>
			<workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
			<texPaths>
				<li>Pawn/OriginiumOverloadSTNL/Enhancement</li>
			</texPaths>
			<overrideMeshSize>(2, 2)</overrideMeshSize>
			<parentTagDef>Body</parentTagDef>
			<rotDrawMode>Fresh, Rotting</rotDrawMode>
			<drawData>
				<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
				<defaultData>
					<layer>0</layer>
				</defaultData>
				<dataNorth>
					<offset>(0, 0, 0)</offset>
					<layer>1000</layer>
				</dataNorth>
				<dataSouth>
					<offset>(0, 0, 0)</offset>
					<layer>-100</layer>
				</dataSouth>
				<dataEast>
					<offset>(0, 0,0.05)</offset>
					<layer>998</layer>
				</dataEast>
				<dataWest>
					<offset>(0, 0,0.05)</offset>
					<layer>998</layer>
				</dataWest>
			</drawData>
		</li>
	</renderNodeProperties>
</HediffDef>

<HediffDef>
	<defName>VPE_PsychicBlackoutSNTL</defName>
	<label>Psychic Blackout</label>
	<description>A state in which the psylink is attempting to reconnect to the archotech network, this process kills any psychic sensitivity the victim possesses.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<initialSeverity>1</initialSeverity>
	<minSeverity>0</minSeverity>
	<maxSeverity>1</maxSeverity>
	<defaultLabelColor>(0.7, 0.7, 0.7)</defaultLabelColor>
	<makesSickThought>False</makesSickThought>
	<scenarioCanAdd>false</scenarioCanAdd>
	<isBad>true</isBad>
	<everCurableByItem>false</everCurableByItem>
	<keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
	<stages>
		<li>
			<statFactors>
				<PsychicSensitivity>0</PsychicSensitivity>
			</statFactors>
		</li>
	</stages>
	<comps>
		<li Class="HediffCompProperties_Disappears">
			<disappearsAfterTicks>60000</disappearsAfterTicks>
			<showRemainingTime>True</showRemainingTime>
		</li>
		<li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
	<renderNodeProperties>
		<li>
			<workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
			<texPaths>
				<li>Pawn/OriginiumFailingSTNL/Enhancement</li>
			</texPaths>
			<overrideMeshSize>(2, 2)</overrideMeshSize>
			<parentTagDef>Body</parentTagDef>
			<rotDrawMode>Fresh, Rotting</rotDrawMode>
			<drawData>
				<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
				<defaultData>
					<layer>0</layer>
				</defaultData>
				<dataNorth>
					<offset>(0, 0, 0)</offset>
					<layer>1000</layer>
				</dataNorth>
				<dataSouth>
					<offset>(0, 0, 0)</offset>
					<layer>-100</layer>
				</dataSouth>
				<dataEast>
					<offset>(0, 0,0.05)</offset>
					<layer>1</layer>
				</dataEast>
				<dataWest>
					<offset>(0, 0,0.05)</offset>
					<layer>1</layer>
				</dataWest>
			</drawData>
		</li>
	</renderNodeProperties>
</HediffDef>

