<Defs>
<!-- Hediff for assimilation -->

<HediffDef>
<defName>VPE_OriginiumAssimilationSNTL</defName>
<label>Originium Assimilation</label>
<description>The absorbed power of a life form. Stronger power will override the weaker one upon assimilation.</description>
<hediffClass>HediffWithComps</hediffClass>
<initialSeverity>0</initialSeverity> 
      <minSeverity>0</minSeverity>
      <maxSeverity>9999999999999999</maxSeverity>
<defaultLabelColor>(1.0, 0.5, 0.0)</defaultLabelColor>
<makesSickThought>False</makesSickThought>
<scenarioCanAdd>false</scenarioCanAdd>
<isBad>false</isBad>
<everCurableByItem>false</everCurableByItem>
<keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
<comps>
<li Class="VPE_Originium.HediffCompProperties_OriginiumAbsorbedTarget">
</li>
</comps>
<stages>
<li>
</li>
</stages>
</HediffDef>

